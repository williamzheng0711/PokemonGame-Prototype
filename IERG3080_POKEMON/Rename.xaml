<Window x:Class="IERG3080_POKEMON.Rename"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IERG3080_POKEMON"
        mc:Ignorable="d"
        Title="Rename" Height="400" Width="400">
    <Grid>
        <Label Content="Give a nickname to your Pokemon!" HorizontalAlignment="Center" Margin="0,34,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Arial Rounded MT Bold"/>
        <TextBox x:Name="newname" HorizontalAlignment="Center" Margin="0,180,0,0" Text="please type" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" FontSize="20" Height="37"/>
        <Label Content="New name: " HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Arial Rounded MT Bold" Height="41" Width="152"/>
        <Button x:Name="Confirm" Content="Confirm" HorizontalAlignment="Center" Margin="0,255,0,0" VerticalAlignment="Top" Height="41" Width="114" FontFamily="Arial Rounded MT Bold" FontSize="18" Click="Confirm_Click"/>

    </Grid>
</Window>
